// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Quote {
  id        String   @id @default(cuid())
  name      String
  email     String
  phone     String
  eventType String
  date      DateTime
  attendees Int
  status    String   @default("pending")
  amount    Float?
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("quotes")
}